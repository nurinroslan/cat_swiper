  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>CatSwipe - Minimal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: linear-gradient(120deg, #1e1e2f, #2c2c3c);
      color: white;
      font-family: 'Segoe UI', sans-serif;
    }
    .card-container {
      position: relative;
      width: 95%;
      height: 350px;
    }
    .swipe-card {
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 20px;
      overflow: hidden;
      background: #fff;
      transition: transform 0.4s, opacity 0.4s;
    }
    .glass {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(8px);
      border-radius: 16px;
    }
     .liked-gallery-wrapper {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
        padding: 1rem;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        overflow: hidden;
        max-height: 300px;
        display: flex;
        flex-direction: column;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
        gap: 0.5rem;
        overflow-y: auto;
        flex-grow: 1;
    }

    /* Hide scrollbar */
    .gallery-grid::-webkit-scrollbar {
        display: none;
    }
    .gallery-grid {
        scrollbar-width: none;
    }

    .gallery-item {
        width: 100%;
        aspect-ratio: 1 / 1;
        overflow: hidden;
        border-radius: 0.5rem;
        position: relative;
        opacity: 0;
        animation: fadeIn 0.4s ease-in-out both;
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        border-radius: 0.5rem;
    }

    .gallery-cat-info {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0,0,0,0.8));
        color: white;
        padding: 8px 6px 6px;
        font-size: 0.7rem;
    }

    .gallery-cat-name {
        font-weight: bold;
        margin-bottom: 0;
        text-align: center;
    }

    .fade-in {
      animation: fadeIn 0.4s ease-in-out both;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.95); }
      to { opacity: 1; transform: scale(1); }
    }
    .cat-info {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0,0,0,0.8));
        color: white;
        padding: 30px 20px 20px;
    }

    .cat-name {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .text-sm {
        font-size: 0.875rem;
    }

    @media (max-width: 768px) {
      .card-container {
          height: 450px;
      }
      
      .cat-info {
          padding: 20px 15px 15px;
      }
      
      .cat-name {
          font-size: 1.3rem;
      }

      .liked-gallery-wrapper {
          max-height: 250px;
      }

      .gallery-grid {
          grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
          gap: 0.4rem;
      }

      .gallery-cat-info {
          padding: 6px 4px 4px;
          font-size: 0.6rem;
      }
    }
  </style>
</head>

  <body>
    <main class="container mx-auto mt-0 px-5 flex">
      <%= yield %>
    </main>
  </body>
</html>
